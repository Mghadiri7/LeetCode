   "source": [
    "def pivotInteger(n):\n",
    "    _sum = n * (n+1) // 2\n",
    "    for i in range(n):\n",
    "        left = i * (i+1) // 2\n",
    "        right = _sum - left - i - 1\n",
    "        if left == right:\n",
    "            return i+1\n",
    "    else:\n",
    "        return -1"
   ]
